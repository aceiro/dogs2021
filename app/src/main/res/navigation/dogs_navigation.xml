<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dogs_navigation"
    app:startDestination="@id/detailsFragment">

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.unicep.app.dogs.view.DetailsFragment"
        tools:layout="@layout/fragment_details"
        android:label="DetailsFragment" >
        <action
            android:id="@+id/goto_list_fragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        tools:layout="@layout/fragment_list"
        android:name="com.unicep.app.dogs.view.ListFragment"
        android:label="ListFragment" >
        <action
            android:id="@+id/go_to_details_fragment"
            app:destination="@id/detailsFragment" />
    </fragment>
</navigation>