<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/tvDogImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:padding="4dp"
            android:layout_margin="2dp"
            android:src="@mipmap/ic_launcher_dog_foreground" />

        <TextView
            android:id="@+id/tvDogName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dog name"
            style="@style/Title"
            android:gravity="center_horizontal"
            android:layout_below="@id/tvDogImage"
            android:layout_alignStart="@id/tvDogImage"
            android:layout_alignEnd="@id/tvDogImage" />

        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dog details"
            style="@style/Text"
            android:gravity="center_horizontal"
            android:layout_below="@id/tvDogName"
            android:layout_alignStart="@id/tvDogName"
            android:layout_alignEnd="@id/tvDogName" />



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionDetailsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_list" />
    </RelativeLayout>

</layout>
